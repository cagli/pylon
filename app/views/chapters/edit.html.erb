<h1>Editing Chapters</h1>

<%= simple_form_for(@chapter) do |f| %>

  <%= f.label :id %>
  <%= f.text_field :id %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save" %>
<% end %>


